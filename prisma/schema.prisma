generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id             String                  @id @unique @default(uuid())
  title          String
  description    String?
  status         String                  @default("OPEN")
  createdAt      DateTime                @default(now())
  updatedAt      DateTime?               @updatedAt
  availabilities CompanyAvaliabilities[]
  users          UserCompany[]
}

model User {
  id        String        @id @unique @default(uuid())
  name      String
  email     String        @unique
  password  String
  createdAt DateTime      @default(now())
  companies UserCompany[]
}

model UserCompany {
  userId    String
  companyId String
  role      String
  company   Company @relation(fields: [companyId], references: [id])
  user      User    @relation(fields: [userId], references: [id])

  @@id([userId, companyId])
}

model Availability {
  id          String                  @id @unique @default(uuid())
  companyId   String
  day         String
  start       String
  end         String
  status      String                  @default("AVALIABLE")
  appointment Appointment?
  companies   CompanyAvaliabilities[]
}

model CompanyAvaliabilities {
  companyId      String
  availabilityId String
  avaliability   Availability @relation(fields: [availabilityId], references: [id])
  company        Company      @relation(fields: [companyId], references: [id])

  @@id([companyId, availabilityId])
}

model Appointment {
  id             String       @id @unique @default(uuid())
  availabilityId String       @unique
  customerEmail  String
  customerNumber String
  customerPhone  String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime?    @updatedAt
  avaliability   Availability @relation(fields: [availabilityId], references: [id])
}
